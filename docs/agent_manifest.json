{
  "agent_name": "ResearchAgent",
  "description": "An agent that demonstrates the mock search tool and framework scaffolding.",
  "version": "1.0.0",
  "tools": [
    {
      "name": "mock_search",
      "description": "Returns a canned response for a given query.",
      "parameters": {
        "query": {
          "description": "The search query to look up.",
          "title": "Query",
          "type": "string"
        },
        "region": {
          "default": "us-en",
          "description": "Locale/region for the mock search.",
          "title": "Region",
          "type": "string"
        }
      },
      "required": [
        "query"
      ],
      "returns": {
        "properties": {
          "summary": {
            "description": "High-level textual summary of results.",
            "title": "Summary",
            "type": "string"
          },
          "query": {
            "description": "Echo of the input query.",
            "title": "Query",
            "type": "string"
          },
          "region": {
            "description": "Echo of the search region used.",
            "title": "Region",
            "type": "string"
          }
        },
        "required": [
          "summary",
          "query",
          "region"
        ],
        "title": "MockSearchOutput",
        "type": "object"
      }
    }
  ]
}